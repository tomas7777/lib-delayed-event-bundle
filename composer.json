{
    "name": "tjovaisas/delayed-event-bundle",
    "authors": [
        {
            "name": "Tomas Jovai≈°as",
            "email": "tomasjov@gmail.com"
        }
    ],
    "license": "MIT",
    "keywords": ["doctrine", "event", "symfony", "flush"],
    "type": "symfony-bundle",
    "description": "Bundle to handle post flush doctrine event in an usual event manner",
    "require": {
        "php": "^7.4 || ^8.0",
        "doctrine/doctrine-bundle": "^2.3",
        "doctrine/orm": "^2.7",
        "symfony/config": "^4.0 || ^5.0",
        "symfony/dependency-injection": "^4.0 || ^5.0",
        "symfony/event-dispatcher": "^4.0 || ^5.0",
        "symfony/framework-bundle": "^4.0 || ^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpunit/phpunit": "^9.0",
        "symfony/yaml": "^4.0 || ^5.0",
        "vimeo/psalm": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "Tjovaisas\\Bundle\\DelayedEventBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tjovaisas\\Bundle\\DelayedEventBundle\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "check-style": [
            "./bin/psalm --no-cache",
            "bin/php-cs-fixer fix --config=.php_cs --diff --dry-run --verbose"
        ],
        "phpunit": "bin/phpunit",
        "fix-cs": "bin/php-cs-fixer fix --config=.php_cs",
        "test": ["@check-style", "@phpunit"]
    }
}
